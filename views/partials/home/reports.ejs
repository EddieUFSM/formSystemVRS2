<div class="modal fade" id="denunciar_formulario" tabindex="-1" role="dialog" aria-labelledby="DenunciandoFormulario" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="DenunciandoFormulario">Denunciando formulário</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Categoria:</label>
                        <select class="form-control" id="recipient-name">
                            <option>Conteúdo impróprio</option>
                            <option>Conteúdo ofensivo</option>
                            <option>Conteúdo sem alternativa correta</option>
                            <option>Conteúdo difama alguém</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="message-text" class="col-form-label">Descrição:</label>
                        <textarea class="form-control" id="message-text"
                            placeholder="Descreva se possível o que há de errado com o conteúdo deste formulário"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Retornar</button>
                <button type="button" class="btn btn-primary">Enviar denúncia</button>
            </div>
        </div>
    </div>
</div>