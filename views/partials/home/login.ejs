<h1>Login</h1>
<form action="/login" method="POST">
    <input type="text" placeholder="login" name="username">
    <input type="password" placeholder="password" name="password">
    <button type="submit">login</button>
</form>

<div class="modal fade" id="login" tabindex="-1" role="dialog" aria-labelledby="login" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <form action="/login" method="POST">
                    <div class="form-group row">
                        <label for="inserirEmail" class="col-sm-3 col-form-label">Email</label>
                        <div class="col-sm-9"><input type="email" name="username" class="form-control" id="inserirEmail" placeholder="Insira o seu email" required></div>
                    </div>
                    <div class="form-group row">
                        <label for="inserirSenha" class="col-sm-3 col-form-label">Senha</label>
                        <div class="col-sm-9"><input type="password" name="password" class="form-control" id="inserirSenha" placeholder="Insira a sua senha" required></div>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block" type="submit">Entrar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>