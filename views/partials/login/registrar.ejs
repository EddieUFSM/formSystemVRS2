<div class="modal fade" id="registrar" tabindex="-1" role="dialog" aria-labelledby="Registrar" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="registrar">Crie a sua conta.</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                <form action="/register" method="POST">
                    <div class="form-group row">
                        <label for="inserirEmail" class="col-sm-3 col-form-label">Email</label>
                        <div class="col-sm-9"><input type="email" name="username" class="form-control" id="inserirEmail" placeholder="Insira o seu email" required></div>
                    </div>
                    <div class="form-group row">
                        <label for="inserirSenha" class="col-sm-3 col-form-label">Senha</label>
                        <div class="col-sm-9"><input type="password" name="password" class="form-control" id="inserirSenha" placeholder="Insira a sua senha" required></div>
                    </div>
                    <div class="form-group row">
                        <label for="repetirSenha" class="col-sm-3 col-form-label">Repetir senha</label>
                        <div class="col-sm-9"><input type="password" name="confirm" class="form-control" id="repetirSenha" placeholder="Reinsira a sua senha" required></div>
                    </div>
                    <div class="form-group row">
                        <label for="inserirDataNascimento" class="col-sm-3 col-form-label">Data de nascimento</label>
                        <div class="col-sm-9"><input type="date" name="bday" class="form-control" id="inserirDataNascimento" required></div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-12">
                            <div class="form-check"><input class="form-check-input" name="aceitarTermos" type="checkbox"id="aceitarTermos" required><label class="form-check-label" for="aceitarTermos">Eu aceito os termos de uso.</label></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block" type="submit">Registrar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>